/*******************************
         Site Overrides
*******************************/

.inverted.form {
    .inverted.input {
        input {
            color: @white;
            background: darken(@black, 2);
        }
    }

    .ui.labeled.input:not([class*="corner labeled"]) .label:first-child + input:focus {
        border-left-color: darken(@black, 2);
    }
}

